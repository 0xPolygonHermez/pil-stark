        this.code.push(`${v} <== BN1toGL3()(${this.getFields1()});`);    
    }

    getFields1() {
        if (this.out.length > 0) {
            this.hiCnt++;
            return this.out.shift();
        }
        this.updateState();
        return this.getFields1();
    }

    getFields253() {
        if (this.out.length > 0) {
            this.hiCnt++;
            return this.out.shift();
        }
        this.updateState();
        return this.getFields253();

    }

    updateState() {
        if(this.hCnt > 0) {
            const firstUnused = Math.max(this.hiCnt, 1);
            if(firstUnused < (arityTranscript + 1)) {
                this.code.push(`for(var i = ${firstUnused}; i < ${arityTranscript + 1}; i++){
        _ <== transcriptHash_${this.hCnt -1}[i]; // Unused transcript values        
    }`)
            }
        }
        while (this.pending.length < arityTranscript) {
            this.pending.push("0");
        }
        this.code.push(`\n    signal transcriptHash_${this.hCnt++}[${Number(arityTranscript) + 1}] <== PoseidonEx(${arityTranscript}, ${arityTranscript + 1})([${this.pending.join(',')}], ${this.state});`);
