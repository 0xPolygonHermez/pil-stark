template FFT(nBits, inv) {

    var p = 0xFFFFFFFF00000001;
    var N = 1<<nBits;

    signal input in[N][3];
    signal output {maxNum} out[N][3];

    signal k[N][3];

    var w;
    var ws[N];
    if (inv) {
        w = invroots(nBits);
        ws[0] = _inv1(N);
    } else {
        w = roots(nBits);
        ws[0] = 1;
    }
    for (var i=1; i<N; i++) {
        ws[i] = ( ws[i-1] * w ) % p;
    }

    var sum[N][3];
    for (var i=0; i<N; i++) {
        for (var e=0; e<3; e++) {
            sum[i][e] = 0;
            for (var j=0; j<N; j++) {
                sum[i][e] = sum[i][e] + ws[(i*j)%N]* in[j][e];
            }
        }
    }

    signal outs[N][3];

    component n2bK[N][3];
    component n2bO[N][3];
    for (var i=0; i<N; i++) {
        for (var e=0; e<3; e++) {
            k[i][e] <-- sum[i][e] \ p;
            outs[i][e] <-- sum[i][e] % p;

            out[i][e] <== LessThan64Bits()(outs[i][e]);

            k[i][e]*p + out[i][e] === sum[i][e];

            n2bK[i][e] = Num2Bits(64+nBits+1);
            n2bK[i][e].in <== k[i][e];
            _ <== n2bK[i][e].out;
        }
    }
}
