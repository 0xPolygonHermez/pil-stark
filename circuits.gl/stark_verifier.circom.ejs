/*
    Verify that FRI polynomials are built properly
*/
template VerifyFRI(nBitsExt, prevStepBits, currStepBits, nextStepBits) {
    var nextStep = currStepBits - nextStepBits; 
    var step = prevStepBits - currStepBits;

    signal input ys[<%- starkStruct.steps[0].nBits %>];
    signal input specialX[3];
    signal input vals_currStep[2**step][3];
    signal input vals_nextStep[2**nextStep][3];
    signal input enable;

    signal sx[currStepBits];
    
    sx[0] <==  1/(<%- F.shift %> ** (2**(nBitsExt - prevStepBits))) *( ys[0] * ((1/roots(prevStepBits)) -1) + 1);
    for (var i=1; i< currStepBits; i++) {
        sx[i] <== sx[i-1] *  ( ys[i] * ((1/roots(prevStepBits -i)) -1) +1);
    }
        
    // Perform an IFFT to obtain the coefficients of the polynomial given s_vals and evaluate it at ????
    signal evalPol[3] <== EvalPol(2**step)(FFT(step, 3, 1)(vals_currStep),[specialX[0] *  sx[currStepBits - 1], specialX[1] * sx[currStepBits - 1], specialX[2] *  sx[currStepBits - 1]]);

    var keys_lowValues[nextStep];
    for(var i = 0; i < nextStep; i++) {
        keys_lowValues[i] = ys[i + nextStepBits];
    } 
   
    signal lowValues[3] <== TreeSelector(nextStep, 3)(vals_nextStep, keys_lowValues);

    // Check that ???????
    enable * (lowValues[0] - evalPol[0]) === 0;
    enable * (lowValues[1] - evalPol[1]) === 0;
    enable * (lowValues[2] - evalPol[2]) === 0;
}

/* 
