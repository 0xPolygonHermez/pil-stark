    // Normal plonk gates

    // C[0] -> Qm1
    // C[1] -> Ql1
    // C[2] -> Qr1
    // C[3] -> Qo1
    // C[4] -> Qc1
    
    // C[6] -> Qm2
    // C[7] -> Ql2
    // C[8] -> Qr2
