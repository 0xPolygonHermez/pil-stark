    pol constant POSEIDONM;
    pol constant POSEIDONCUSTFIRST;
    pol constant POSEIDONP;
    pol constant POSEIDONFIRST;
    pol constant PARTIALROUND;
    pol constant PARTIALROUND2;
    pol constant GATE;
    pol constant CMULADD;
