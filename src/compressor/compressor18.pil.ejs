    pol custPoseidonInput6 = a[8] * (a[6] - a[2]) + a[2];
    pol custPoseidonInput7 = a[8] * (a[7] - a[3]) + a[3];

    pol checkBinary = a[8] * (a[8] - 1);
    POSEIDONCUSTFIRST * checkBinary = 0;

